<Window x:Class="BANK.Transaction"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BANK"
        mc:Ignorable="d"
        Title="Transaction" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="250"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="DataTransaction" Margin="10,10,0,10" AutoGenerateColumns="False" SelectedCellsChanged="DataTransaction_SelectedCellsChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Дата" Binding="{Binding Date, StringFormat=d}" Width="100"></DataGridTextColumn>
                <DataGridTextColumn Header="Описание" Binding="{Binding Name}" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Деньги" Binding="{Binding Money}" Width="100"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Column="1">
            <Label Content="Дата" Margin="0,10,0,0"></Label>
            <Calendar x:Name="Calendar" Margin="3"></Calendar>
            <Label Content="Описание"></Label>
            <TextBox x:Name="NameBox" Margin="3"></TextBox>
            <Label Content="Сумма денег"></Label>
            <TextBox x:Name="MoneyBox" Margin="3"></TextBox>
            <Button x:Name="AddButton" Content="Добавить транзакцию" Margin="3" Height="30" Click="AddButton_Click"></Button>
            <Button x:Name="EditButton" Content="Редактировать транзакцию" Margin="3" Height="30" Click="EditButton_Click"></Button>
            <Button x:Name="RemButton" Content="Удалить транзакцию" Margin="3" Height="30" Click="RemButton_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
