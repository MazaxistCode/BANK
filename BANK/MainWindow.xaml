<Window x:Class="BANK.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BANK"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Content="Главное меню." HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Row="0"></Label>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1">
            <Button x:Name="Transaction" Content="Транзакции" Margin="5" Width="100" Height="40" Click="Transaction_Click"/>
            <Button x:Name="Report" Content="Фин. отчёт" Margin="5" Width="100" Height="40" Click="Report_Click"/>
        </StackPanel>
    </Grid>
</Window>
